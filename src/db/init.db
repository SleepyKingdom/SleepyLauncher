-- DROP SCHEMA prod;

CREATE SCHEMA prod AUTHORIZATION pg_database_owner;

-- DROP SEQUENCE prod.users_id_seq;

CREATE SEQUENCE prod.users_id_seq
	INCREMENT BY 1
	MINVALUE 1
	MAXVALUE 2147483647
	START 1
	CACHE 1
	NO CYCLE;-- prod.users definition

-- Drop table

-- DROP TABLE prod.users;

CREATE TABLE prod.users (
	id serial4 NOT NULL,
	username varchar(255) NOT NULL,
	"password" varchar(255) NOT NULL,
	display_name varchar(255) NOT NULL,
	email varchar(255) NOT NULL,
	phone_number varchar(20) NULL,
	first_name varchar(255) NULL,
	last_name varchar(255) NULL,
	force_logout bool DEFAULT false NULL,
	phone2fa bool DEFAULT false NULL,
	email2fa bool DEFAULT false NULL,
	auth2fa bool DEFAULT false NULL,
	profile_picture text NULL,
	CONSTRAINT users_email_key UNIQUE (email),
	CONSTRAINT users_phone_number_key UNIQUE (phone_number),
	CONSTRAINT users_pkey PRIMARY KEY (id),
	CONSTRAINT users_username_key UNIQUE (username)
);


